{
  "name": "battleships-server",
  "version": "0.0.1",
  "description": "The socket server of Battleships game.",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "compile:engine": "battleships-compile --src node_modules/battleships-engine/src --dest lib/battleships-engine/src --relative ../../ --format cjs",
    "compile:utils": "battleships-compile --src node_modules/@ckeditor/ckeditor5-utils/src --dest lib/@ckeditor/ckeditor5-utils/src --relative ../../ --format cjs",
    "compile": "rm -rf lib && npm run compile:engine && npm run compile:utils",
    "test": "nyc --all --reporter=lcov --reporter=text mocha -- tests",
    "lint": "eslint --quiet '**/*.js'",
    "precommit": "lint-staged"
  },
  "keywords": [
    "battleships",
    "game"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ships-online/battleships-server.git"
  },
  "author": "Oskar Wr√≥bel <kontakt@oskarwrobel.pl>",
  "license": "ISC",
  "devDependencies": {
    "battleships-dev-tools": "https://github.com/ships-online/battleships-dev-tools.git",
    "eslint": "^4.10.0",
    "eslint-config-ckeditor5": "^1.0.6",
    "husky": "^0.14.3",
    "lint-staged": "^4.3.0",
    "mocha": "^4.0.1",
    "nyc": "^11.2.1"
  },
  "dependencies": {
    "@ckeditor/ckeditor5-utils": "^1.0.0-alpha.1",
    "battleships-engine": "https://github.com/ships-online/battleships-engine.git",
    "shortid": "^2.2.6",
    "socket.io": "^1.5.0"
  },
  "nyc": {
    "exclude": [
      "lib"
    ],
    "include": [
      "src"
    ]
  },
  "lint-staged": {
    "**/*.js": [
      "eslint --quiet"
    ]
  },
  "eslintIgnore": [
    "coverage/**",
    "lib/**"
  ]
}
